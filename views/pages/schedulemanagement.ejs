<header>
    <nav>
        <img src="static/assets/logo_blanc.png" class="white-coffee" alt="Coffee_logo">

        <ul>
            <li><a style="color: white;" href="/schedulemanagement">Schedule</a></li>
            <form method='post' action='/logout'>
            <li><button type="submit" class="btn-logout btn-hover"><a  style="color: black;" >LOG OUT</a></button></li>
            </form>
        </ul>
    </nav>
</header>
<section>
    <form method="POST" action="/schedulemanagement">
        <div class="main-wrapper">
            <div>
                <img src="/static/assets/logo_dark.png" class="black-coffee" alt="coffee blacklogo">
                <h2>Craft avaliability</h2>
            </div>
      
            <div>
                <input name=id_user type="integer" id="id_user" class="rectangle-one" placeholder="User Id Number:">
                <select style="outline: none;" class="rectangle-one" type="number" name="day" value=''>
                    <option value="" disabled selected hidden>Pick your day</option>
                    <option type="number" value="1">Monday</option>
                    <option type="number" value="2">Tuesday</option>
                    <option type="number" value="3">Wednesday</option>
                    <option type="number" value="4">Thursday</option>
                    <option type="number" value="5">Friday</option>
                    <option type="number" value="6">Saturday</option>
                    <option type="number" value="7">Sunday</option>
            
                <input name="start_time" type="datetime-local" id="InputStarttime" class="rectangle-one" placeholder="Write your start time" required>
                <input name="end_time" type="datetime-local" id="InputEndtime" class="rectangle-one" placeholder="Write your end time" required>
                
                <button type="submit" class="btn btn-hover">Submit</button>
            </div>
        </div>
    </form>
</section>

<section>
    <h2 style="color:white; text-align:center; font-size: 30px;">Updated schedule</h2>

    <div class="home-wrapper">
        <table>
            <tr>
                <th>User ID</th>
                <th>Name</th>
                <th>Day </th>
                <th>Start ğŸ•‘</th>
                <th>End ğŸ•‘</th>
            </tr>
            <tr>
            <% for(let i =0; i < schedule.length; i++ ){ %>
                <td><%= schedule[i].id_user %></td>
                <td><%= schedule[i].day %></tr>
                <td><%= schedule[i].start_time %></tr>
                <td><%= schedule[i].end_time %></tr>
                <% } %>
            </tr>
        </table>
    </div>
</section>

