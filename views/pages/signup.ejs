<div class="whole-wrapper">
    <h1>Mr Coffee Schedule</h1>

    <div class="main-wrapper">
        <form method="POST" action="/signup" id="signup-form" novalidate>
            <div>
                <img src="/static/assets/logo_dark.png" class="black-coffee" alt="coffee blacklogo">
                <h2>Signup</h2>
            </div>

            <div class="form-control">
                <input name="last_name" type="text" id="last_nameInput" class="rectangle-two" placeholder="last name" onkeydown="checkInputs()">
                <i class="fas fa-check-circle"></i>
                <i class="fas fa-exclamation-circle"></i>
                <small>Error Message</small>
            </div>

            <div class="form-control">
                <input name="first_name" type="text" id="first_nameInput" class="rectangle-two"  placeholder="first name" onkeydown="checkInputs()">
                <i class="fas fa-check-circle"></i>
                <i class="fas fa-exclamation-circle"></i>
                <small>Error Message</small>
            </div>

            <div class="form-control">
                <input name="email" type="email" id="emailInput" class="rectangle-two"  placeholder="email" onkeydown="checkInputs()">
                <i class="fas fa-check-circle"></i>
                <i class="fas fa-exclamation-circle"></i>
                <small>Error Message</small>
            </div>

            <div class="form-control">
                <input name="password" type="password" id="passwordInput" class="rectangle-two"  placeholder="password" onkeydown="checkInputs()">
                <!-- <i class="far fa-eye" id="togglePassword"></i> -->
                <i class="fas fa-check-circle"></i>
                <i class="fas fa-exclamation-circle"></i>
                <small>Error Message</small>
            </div>

            <div class="form-control">
                <input name="confirmPassword" type="password" id="confirmPasswordInput" class="rectangle-two"  placeholder="Re-enter your password" onkeydown="checkInputs()"> 
                <!-- <i class="far fa-eye" style="margin: -30px;" id="togglePassword"></i>  -->
                <i class="fas fa-check-circle"></i>
                <i class="fas fa-exclamation-circle"></i>
                <small>Error Message</small>  
            </div>

            <div>
                <button type="submit" class="btn btn-signup btn-hover">SIGN UP</button>
                <p>already have an account?</p>
                <a href="/login">LOG IN</a>
            </div>
        </form>
    </div>
</div>


